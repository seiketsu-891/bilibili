<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bili.dao.FollowingGroupDao">
    <select id="getById" parameterType="java.lang.Long" resultType="com.bili.domain.FollowingGroup">
        select
            *
        from
            t_following_group
        where id = #{id}
    </select>
    
    <select id="getByType" parameterType="java.lang.String" resultType="com.bili.domain.FollowingGroup">
        select
            *
        from
            t_following_group
        where `type` = #{type}
    </select>
</mapper>